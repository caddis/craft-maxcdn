{% extends '_layouts/cp' %}

{% set title = 'MaxCDN' %}
{% set message = craft.session.getFlash('cacheCleared') %}

{% set extraPageHeaderHtml %}
	<div class="buttons">
		<a
			href="{{ url('maxcdn/cache') }}"
			class="btn"
			data-icon="settings"
			role="button"
		>
			{{ 'Manage Cache'|t }}
		</a>
	</div>
{% endset %}

{% set sidebar %}
	<nav>
		<ul>
			<li>
				<a href="{{ url('maxcdn') }}">{{ 'Files'|t }}</a>
			</li>
			<li>
				<a href="{{ url('maxcdn/zones') }}" class="sel">{{ 'Zones'|t }}</a>
			</li>
		</ul>
	</nav>
{% endset %}

{% set content %}
	<table class="data fullwidth">
		<thead>
			<tr>
				<th scope="col">{{ 'Zone'|t }}</th>
				<th scope="col">{{ 'Cache Hits'|t }}</th>
				<th scope="col">{{ 'Hits'|t }}</th>
				<th scope="col">{{ 'Non-Cache Hits'|t }}</th>
				<th scope="col">{{ 'Size'|t }}</th>
			</tr>
		</thead>
		<tbody>
			{% for zone in zones %}
				<tr>
					{% for stat in zone %}
						<td>{{ stat }}</td>
					{% endfor %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endset %}