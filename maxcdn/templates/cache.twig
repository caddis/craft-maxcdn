{% extends 'maxcdn/layouts/cp' %}

{% import '_includes/forms' as forms %}

{% set selectedTab = 'purge' %}
{% set fullPageForm = true %}
{% set saveShortcutRedirect = 'home' %}

{% set extraPageHeaderHtml = '' %}

{% set content %}
	{{ forms.selectField({
		label: 'Zone'|t,
		name: 'zone_id',
		instructions: 'Select which zone to purge.',
		options: options
	}) }}

	<input type="hidden" name="action" value="maxCDN/purgeCache">
	<input type="submit" class="btn submit" value="{{ 'Purge'|t }}">
{% endset %}