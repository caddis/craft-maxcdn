{% extends '_layouts/cp' %}

{% set title = 'MaxCDN' %}
{% set message = craft.session.getFlash('cacheCleared') %}

{% set extraPageHeaderHtml %}
	<div class="buttons">
		<a
			href="{{ url('maxcdn/cache') }}"
			class="btn"
			data-icon="settings"
			role="button"
		>
			{{ 'Manage Cache'|t }}
		</a>
	</div>
{% endset %}

{% set sidebar %}
	<nav>
		<ul>
			<li>
				<a href="{{ url('maxcdn') }}" class="sel">{{ 'Files'|t }}</a>
			</li>
			<li>
				<a href="{{ url('maxcdn/zones') }}">{{ 'Zones'|t }}</a>
			</li>
		</ul>
	</nav>
{% endset %}

{% set content %}
	<table class="data fullwidth">
		<thead>
			<tr>
				<th scope="col">{{ 'Filename'|t }}</th>
				<th scope="col">{{ 'Cache Date'|t }}</th>
				<th scope="col">{{ 'Hits'|t }}</th>
				<th scope="col">{{ 'Size'|t }}</th>
			</tr>
		</thead>
		<tbody>
			{% for file in files %}
				<tr>
					<td>{{ file.uri }}</td>
					<td>{{ file.timestamp|date('M d, Y') }}</td>
					<td>{{ file.hit }}</td>
					<td>{{ file.size }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endset %}